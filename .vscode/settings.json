{
  "python.defaultInterpreterPath": "./quote_env/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell (Quote Env)": {
      "source": "PowerShell",
      "args": [
        "-NoExit",
        "-ExecutionPolicy", "Bypass",
        "-File", ".vscode/activate_env.ps1"
      ],
      "icon": "terminal-powershell"
    },
    "Command Prompt (Quote Env)": {
      "source": "cmd",
      "args": ["/k", ".vscode\\activate_env.bat"],
      "icon": "terminal-cmd"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt (Quote Env)",
  "python.envFile": "${workspaceFolder}/.env",
  "files.associations": {
    "*.bat": "bat"
  },
  "terminal.integrated.cwd": "${workspaceFolder}",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic"
} 